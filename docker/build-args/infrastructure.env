# --- Monitoring Server Specific ---
MONITORING_SERVER_PATH=infrastructure/monitoring/monitoring-server
MONITORING_SERVER_SERVICE_NAME=monitoring-server

# --- Infrastructure Dependencies ---
CONSUL_ENABLED=true
CONSUL_HOST=consul
